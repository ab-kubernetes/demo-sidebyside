apiVersion: serving.knative.dev/v1alpha1
kind: Service
metadata:
  name: booted
spec:
  runLatest:
    configuration:
      revisionTemplate:
        metadata:
          annotations:
            autoscaling.knative.dev/target: "10"
        spec:
          container:
            image: docker.io/snowdrop/booted:0.1
            resources:
              requests: 
                memory: "150Mi"
                cpu: "100m"
              limits:
                memory: "250Mi"
                cpu: "250m"
            livenessProbe:
              initialDelaySeconds: 1
              httpGet:
                path: /actuator/health
            readinessProbe:
              initialDelaySeconds: 1
              httpGet:
                path: /actuator/health