apiVersion: serving.knative.dev/v1alpha1
kind: Service
metadata:
  name: noded
spec:
  runLatest:
    configuration:
      revisionTemplate:
        metadata:
          annotations:
            autoscaling.knative.dev/target: "10"
        spec:
          container:
            image: docker.io/snowdrop/noded:0.1
            imagePullPolicy: Always
            resources:
              requests: 
                memory: "50Mi"
                cpu: "75m" 
              limits:
                memory: "150Mi"
                cpu: "75m" 
            livenessProbe:
              initialDelaySeconds: 1
              httpGet:
                path: /healthz
            readinessProbe:
              initialDelaySeconds: 1
              httpGet:
                path: /healthz